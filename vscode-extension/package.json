{
  "name": "typemux-schema",
  "displayName": "TypeMux Schema Language",
  "description": "Language support for TypeMux IDL schema files",
  "version": "0.6.0",
  "publisher": "rasmartins",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "keywords": [
    "typemux",
    "idl",
    "schema",
    "protobuf",
    "graphql",
    "openapi"
  ],
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "languages": [
      {
        "id": "typemux-schema",
        "aliases": [
          "TypeMux Schema",
          "typemux"
        ],
        "extensions": [
          ".typemux"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/icon.png",
          "dark": "./icons/icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "typemux-schema",
        "scopeName": "source.typemux",
        "path": "./syntaxes/typemux.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "typemux-schema",
        "path": "./snippets/typemux.json"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "typemuxSchemaTree",
          "name": "TypeMux Schema",
          "when": "resourceLangId == typemux-schema"
        }
      ]
    },
    "commands": [
      {
        "command": "typemux.refreshSchemaTree",
        "title": "Refresh Schema Tree",
        "category": "TypeMux",
        "icon": "$(refresh)"
      },
      {
        "command": "typemux.newType",
        "title": "New Type (Wizard)",
        "category": "TypeMux",
        "icon": "$(symbol-class)"
      },
      {
        "command": "typemux.newService",
        "title": "New Service (Wizard)",
        "category": "TypeMux",
        "icon": "$(symbol-method)"
      },
      {
        "command": "typemux.newFile",
        "title": "New TypeMux File",
        "category": "TypeMux",
        "icon": "$(new-file)"
      },
      {
        "command": "typemux.import",
        "title": "Import from Proto/GraphQL/OpenAPI",
        "category": "TypeMux",
        "icon": "$(file-code)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "typemux.refreshSchemaTree",
          "when": "view == typemuxSchemaTree",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "typemux.newType",
          "when": "resourceLangId == typemux-schema",
          "group": "typemux@1"
        },
        {
          "command": "typemux.newService",
          "when": "resourceLangId == typemux-schema",
          "group": "typemux@2"
        }
      ],
      "explorer/context": [
        {
          "command": "typemux.newFile",
          "when": "explorerResourceIsFolder",
          "group": "navigation@10"
        },
        {
          "command": "typemux.import",
          "when": "explorerResourceIsFolder",
          "group": "typemux@1"
        }
      ],
      "commandPalette": [
        {
          "command": "typemux.newType",
          "when": "resourceLangId == typemux-schema"
        },
        {
          "command": "typemux.newService",
          "when": "resourceLangId == typemux-schema"
        },
        {
          "command": "typemux.import"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.70.0",
    "@vscode/vsce": "^3.6.2",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rasmartins/typemux.git"
  },
  "license": "MIT"
}
